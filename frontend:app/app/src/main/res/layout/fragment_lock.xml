<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cardlist.LockFragment"

    android:orientation="vertical"
    android:fitsSystemWindows="true"

    android:background="@drawable/background_pattern"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/select_child_header_none"
                android:scaleType="centerCrop"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="top"
                android:paddingVertical="40dp"
                android:paddingHorizontal="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/right_life_140"
                    android:textSize="23dp"
                    android:text="보호자라면 답을 입력하세요"
                    android:paddingBottom="5dp"
                    />

                <ImageButton
                    android:id="@+id/btn_lock_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/app_name"
                    android:elevation="2dp"
                    android:padding="2dp"
                    android:src="@drawable/abtn_back" />

            </FrameLayout>

        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chara_bear1"

                    android:layout_weight="2"
                    />

                <TextView
                    android:id="@+id/tv_lock_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_more_border_for_select_child"
                    android:backgroundTint="@color/black"

                    android:text="   ×    = ?"

                    android:fontFamily="@font/right_life_140"
                    android:textColor="@color/font_white"
                    android:textSize="32dp"

                    android:gravity="center"

                    android:padding="10dp"
                    android:elevation="1dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_lock_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_more_border_for_select_child"
                android:backgroundTint="@color/font_white"

                android:fontFamily="@font/right_life_140"
                android:textColor="@color/font_black"
                android:textSize="32dp"

                android:gravity="center"

                android:paddingVertical="10dp"
                android:layout_marginVertical="20dp"

                android:maxLength="5"
                />

            <!--계산 버튼-->
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fillViewport="true"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="30dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        >
                        <android.widget.Button
                            android:id="@+id/btn_lock_1"
                            android:text="1"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/round_more_border_for_select_child"
                            android:backgroundTint="@color/btn_back"

                            android:fontFamily="@font/right_life_140"
                            android:textColor="@color/btn_line"
                            android:textSize="32dp"

                            android:gravity="center"
                            android:elevation="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginHorizontal="2dp"
                            />
                        <android.widget.Button
                            android:id="@+id/btn_lock_2"
                            android:text="2"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/round_more_border_for_select_child"
                            android:backgroundTint="@color/btn_back"

                            android:fontFamily="@font/right_life_140"
                            android:textColor="@color/btn_line"
                            android:textSize="32dp"

                            android:gravity="center"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginHorizontal="20dp"
                            />
                        <android.widget.Button
                            android:id="@+id/btn_lock_3"
                            android:text="3"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/round_more_border_for_select_child"
                            android:backgroundTint="@color/btn_back"

                            android:fontFamily="@font/right_life_140"
                            android:textColor="@color/btn_line"
                            android:textSize="32dp"

                            android:gravity="center"
                            android:elevation="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginHorizontal="2dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        >
                        <android.widget.Button
                            android:id="@+id/btn_lock_4"
                            android:text="4"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/round_more_border_for_select_child"
                            android:backgroundTint="@color/btn_back"

                            android:fontFamily="@font/right_life_140"
                            android:textColor="@color/btn_line"
                            android:textSize="32dp"

                            android:gravity="center"
                            android:elevation="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginHorizontal="2dp"
                            />
                        <android.widget.Button
                            android:id="@+id/btn_lock_5"
                            android:text="5"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/round_more_border_for_select_child"
                            android:backgroundTint="@color/btn_back"

                            android:fontFamily="@font/right_life_140"
                            android:textColor="@color/btn_line"
                            android:textSize="32dp"

                            android:gravity="center"
                            android:elevation="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginHorizontal="20dp"
                            />
                        <android.widget.Button
                            android:id="@+id/btn_lock_6"
                            android:text="6"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/round_more_border_for_select_child"
                            android:backgroundTint="@color/btn_back"

                            android:fontFamily="@font/right_life_140"
                            android:textColor="@color/btn_line"
                            android:textSize="32dp"

                            android:gravity="center"
                            android:elevation="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginHorizontal="2dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        >
                        <android.widget.Button
                            android:id="@+id/btn_lock_7"
                            android:text="7"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/round_more_border_for_select_child"
                            android:backgroundTint="@color/btn_back"

                            android:fontFamily="@font/right_life_140"
                            android:textColor="@color/btn_line"
                            android:textSize="32dp"

                            android:gravity="center"
                            android:elevation="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginHorizontal="2dp"
                            />
                        <android.widget.Button
                            android:id="@+id/btn_lock_8"
                            android:text="8"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/round_more_border_for_select_child"
                            android:backgroundTint="@color/btn_back"

                            android:fontFamily="@font/right_life_140"
                            android:textColor="@color/btn_line"
                            android:textSize="32dp"

                            android:gravity="center"
                            android:elevation="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginHorizontal="20dp"
                            />
                        <android.widget.Button
                            android:id="@+id/btn_lock_9"
                            android:text="9"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/round_more_border_for_select_child"
                            android:backgroundTint="@color/btn_back"

                            android:fontFamily="@font/right_life_140"
                            android:textColor="@color/btn_line"
                            android:textSize="32dp"

                            android:gravity="center"
                            android:elevation="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginHorizontal="2dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/btn_lock_trash"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:clickable="true"

                            android:contentDescription="@string/app_name"

                            android:elevation="1dp"
                            android:gravity="center"
                            android:src="@drawable/abtn_trashcan" />
                        <android.widget.Button
                            android:id="@+id/btn_lock_0"
                            android:text="0"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:elevation="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/round_more_border_for_select_child"
                            android:backgroundTint="@color/btn_back"

                            android:fontFamily="@font/right_life_140"
                            android:textColor="@color/btn_line"
                            android:textSize="32dp"

                            android:gravity="center"

                            />
                        <android.widget.Button
                            android:id="@+id/btn_lock_ok"
                            android:text="OK"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/round_more_border_for_select_child"
                            android:backgroundTint="@color/btn_back"

                            android:fontFamily="@font/pretendard_bold"
                            android:textColor="@color/btn_line"
                            android:textSize="32dp"

                            android:gravity="center"
                            android:elevation="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginHorizontal="2dp"
                            />
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/layout_for_lock_retry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"

        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border_for_select_child"
            android:backgroundTint="@color/sys_50"
            android:layout_gravity="center"
            android:elevation="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="2dp"

            android:orientation="vertical"
            android:gravity="center"

            android:layout_margin="30dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chara_bear_error"
                android:layout_margin="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정답이 일치하지 않아요\n다시 시도해주세요"

                android:fontFamily="@font/right_life_140"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                />

            <android.widget.Button
                android:id="@+id/btn_lock_ok_for_retry"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=" 확인 "
                android:textColor="@color/btn_line"
                android:fontFamily="@font/right_life_140"
                android:textSize="16dp"

                android:gravity="center"
                android:layout_gravity="center|bottom"

                android:background="@drawable/round_more_border_for_select_child"
                android:backgroundTint="@color/btn_back"
                android:elevation="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="2dp"
                android:paddingHorizontal="30dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>