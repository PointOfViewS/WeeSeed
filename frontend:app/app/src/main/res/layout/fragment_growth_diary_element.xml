<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".growthDiary.GrowthDiaryElementFragment"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_gr_ele_childName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아동명"

                    android:textSize="24dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="@color/font_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="의 성장일지"

                    android:textSize="24dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="@color/font_black"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                >
                <TextView
                    android:id="@+id/tv_gr_ele_createDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YYYY.MM.DD"

                    android:textSize="15dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/font_darkgray"
                    />
                <TextView
                    android:id="@+id/tv_gr_ele_makerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생성자"

                    android:textSize="15dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/font_darkgray"

                    android:layout_gravity="end"
                    />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ic_200"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    >
                    <TextView
                        android:id="@+id/tv_gr_ele_cntALL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   "

                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/btn_line"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개의 카드가 생성되었어요"

                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/font_black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAC 카드   : "

                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/ic_900"
                        />
                    <TextView
                        android:id="@+id/tv_gr_ele_cntAAC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   "

                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/font_black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개"

                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/ic_900"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비디오 카드 : "

                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/ic_900"
                        />

                    <TextView
                        android:id="@+id/tv_gr_ele_cntVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"

                        android:text="   "
                        android:textColor="@color/font_black"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개"

                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/ic_900"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가장 많이 학습한 카드는 "

                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/font_black"
                        />
                    <TextView
                        android:id="@+id/tv_gr_ele_mostSelectedCardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   "

                        android:textSize="15dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/btn_line"
                        />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_aac"
                    android:layout_width="160dp"
                    android:layout_height="192dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="start"

                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/iv_aac_img"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:minWidth="160dp"
                        android:minHeight="160dp"
                        android:maxWidth="240dp"
                        android:maxHeight="240dp"
                        android:scrollbars="none"
                        android:clickable="false"
                        android:background="@color/loading_item"
                        android:clipToOutline="false"
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:id="@+id/tv_aac_name"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text=""

                        android:maxLength="8"
                        android:textSize="18sp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/font_white"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lt_loading_dots"
        android:layout_width="100dp"
        android:layout_height="200dp"

        android:visibility="gone"

        android:gravity="center"
        android:layout_gravity="center"

        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_loading_dots2"
        android:paddingTop="60dp"
        android:paddingBottom="0dp"
        />
</FrameLayout>