<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".util.IsOkDialog_round"

    android:id="@+id/dialog_isOK"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:background="@drawable/round_border_for_select_child"
        android:backgroundTint="@color/ic_50"
        android:layout_gravity="center"
        android:padding="20dp"
        android:elevation="10dp"
        android:clickable="true"
        >


        <TextView
            android:id="@+id/title_rnd_isOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="24dp"
            android:text="  "
            android:textColor="@color/font_black"
            />

        <TextView
            android:id="@+id/desc_rnd_isOK"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="  "
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"

            >

            <android.widget.Button
                android:visibility="visible"

                android:id="@+id/btn_rnd_left"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="취소"
                android:textSize="16dp"
                android:textColor="@color/font_darkgray"
                android:fontFamily="@font/pretendard_bold"
                android:background="@drawable/round_border_for_select_child"
                android:backgroundTint="@color/ic_200"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="40dp"
                android:layout_marginVertical="5dp"
                android:elevation="10dp"
                />

            <android.widget.Button
                android:id="@+id/btn_rnd_right"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="확인"
                android:textSize="16dp"
                android:textColor="@color/btn_line"
                android:fontFamily="@font/pretendard_bold"
                android:background="@drawable/round_border_for_select_child"
                android:backgroundTint="@color/btn_back"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="5dp"

                />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>