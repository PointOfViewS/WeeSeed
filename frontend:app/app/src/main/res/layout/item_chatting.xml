<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"

    android:orientation="vertical"
    >



    <FrameLayout
        android:id="@+id/layout_chatbot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@drawable/icon_s_tts"
            app:tint="@color/ic_900"
            android:padding="7dp"

            android:background="@drawable/round_more_border_for_select_child"
            android:backgroundTint="@color/sys_500"

            android:layout_gravity="start|top"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/triangle"
            android:scaleType="fitXY"

            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            />
        <TextView
            android:id="@+id/tv_chatBots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="260dp"
            android:background="@drawable/round_border_for_select_child"
            android:backgroundTint="@color/app_bar_text"
            android:textSize="14dp"

            android:paddingVertical="12dp"
            android:paddingHorizontal="15dp"

            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"

            android:text="어디 감히 코딩을 끝낼 생각을?"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/triangle"
            app:tint="@color/btn_back"
            android:scaleType="fitXY"
            android:scaleX="-1"

            android:layout_gravity="end"
            />
        <TextView
            android:id="@+id/tv_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="260dp"
            android:background="@drawable/round_border_for_select_child"
            android:backgroundTint="@color/btn_back"
            android:textSize="14dp"

            android:paddingVertical="12dp"
            android:paddingHorizontal="15dp"

            android:layout_marginEnd="10dp"
            android:layout_gravity="end"

            android:text="작업이 끝나질 않네..."
            />
    </FrameLayout>

</LinearLayout>