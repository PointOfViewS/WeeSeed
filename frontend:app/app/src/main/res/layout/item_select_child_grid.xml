<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_border_for_select_child"
    android:backgroundTint="@color/sys_100"
    android:elevation="8dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:clickable="true"
    android:fadingEdge="vertical"
    >
    <ImageView
        android:id="@+id/iv_sc_it_child_profImg_bigger"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:src="@drawable/prof_child_big_4"
        android:scaleType="center"
        android:paddingStart="70dp"

        android:layout_gravity="end"
        android:background="@drawable/aac_background"
        android:backgroundTint="@android:color/transparent"
        android:clipToOutline="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingVertical="25dp"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tv_sc_it_childName_bigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아동명"
                    android:textSize="17sp"
                    android:fontFamily="@font/right_life_140"
                    android:textColor="@color/black"

                    />
                <ImageView
                    android:id="@+id/iv_sc_gender_bigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/child_gender_f"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="14dp"

                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_sc_it_childBirth_bigger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YYYY.MM.DD"
                android:textSize="13sp"
                android:fontFamily="@font/right_life_140"
                android:layout_gravity="bottom"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_sc_it_childDisaType_bigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장애유형"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_regular"

                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_sc_it_childDisaGrade_bigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장애등급"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_regular"

                    android:visibility="gone"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_sc_it_childGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textSize="16sp"
        android:layout_gravity="end"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/tv_sc_it_childCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아동코드"

        android:textSize="16sp"
        android:layout_gravity="end|bottom"
        android:visibility="gone"
        />

</FrameLayout>