<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked 상태 -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/dimmed3"/>
            <corners android:radius="30dp"/> <!-- track의 둥근 모서리 -->
        </shape>
    </item>

    <!-- Unchecked 상태 -->
    <item>
        <shape>
            <solid android:color="@color/dimmed2"/>
            <corners android:radius="30dp"/> <!-- track의 둥근 모서리 -->
        </shape>
    </item>
</selector>
