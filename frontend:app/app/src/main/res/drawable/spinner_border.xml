<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle"
                    >
                <solid android:color="@color/sys_50"/>
                <padding
                    android:right="12dp"
                    android:left="12dp"
                    />
                    <stroke
                    android:width="1dp"
                    android:color="@color/sys_300"
                    />
                <corners
                    android:radius="50dp"
                    />
                </shape>
            </item>
            <item
                android:drawable="@drawable/icon_s_down"
                android:gravity="end"
                />
        </layer-list>
    </item>

</selector>